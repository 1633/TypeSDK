<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:minHeight="58dp"
    android:background="@drawable/ly_pay_switch_land_item_selector" >

    <ImageView
        android:id="@+id/ly_pay_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/ly_pay_type"
        style="@style/ly_style_text_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ly_pay_icon"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/ly_pay_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ly_pay_type"
        android:background="@drawable/ly_badge_bg"
        android:textColor="@android:color/white"
        android:textSize="25px" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ly_arrow" />

</RelativeLayout>