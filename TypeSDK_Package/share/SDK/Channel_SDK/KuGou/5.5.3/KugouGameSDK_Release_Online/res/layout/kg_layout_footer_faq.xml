<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:text="@string/kg_custom_service_faqfoot"
        android:textSize="@dimen/kg_common_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:text="@string/kg_custom_service_faqfoot_service"
            android:textSize="@dimen/kg_common_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:text="@string/kg_custom_service_phone"
            android:textColor="@color/kg_common_blue"
            android:textSize="@dimen/kg_common_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:text="@string/kg_custom_service_faqfoot_QQ"
            android:textSize="@dimen/kg_common_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:text="@string/kg_custom_service_qqnum"
            android:textColor="@color/kg_common_blue"
            android:textSize="@dimen/kg_common_large" />
    </LinearLayout>

</LinearLayout>