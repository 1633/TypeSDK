<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/kg_layout_empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@color/kg_common_background_lighter"
        android:orientation="vertical" >

            <ImageView
                android:id="@+id/kg_iv_empty"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/kg_favor_no_result_image" />

            <TextView
                android:id="@+id/kg_tv_empty"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/kg_empty_content"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    

</LinearLayout>
