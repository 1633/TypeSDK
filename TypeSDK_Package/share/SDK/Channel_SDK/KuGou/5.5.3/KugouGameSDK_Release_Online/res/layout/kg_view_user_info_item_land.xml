<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/kg_layout_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/kg_selector_item_click_rectagle"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:id="@+id/kg_layout_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/kg_info_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#666666"
                android:textSize="16sp" />

            <Button
                android:id="@+id/kg_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kg_selector_btn_blue"
                android:gravity="center"
                android:minWidth="70dp"
                android:minHeight="25dp"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/kg_common_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/kg_info_title_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kg_layout_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/kg_common_blue_lighter"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/kg_info_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kg_info_title_sub"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

        <View
            android:id="@+id/kg_info_item_divider"
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:background="@color/kg_common_divider"
            android:visibility="gone" />
    </RelativeLayout>

</merge>