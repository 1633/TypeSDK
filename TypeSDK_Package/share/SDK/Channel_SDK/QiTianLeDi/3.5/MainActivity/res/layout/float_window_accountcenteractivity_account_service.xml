<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/float_window_grey"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/float_window_account_service_textview_online_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/float_window_white"
        android:drawableRight="@drawable/float_window_jiantou"
        android:text="@string/float_window_online_custom_service"
        android:textColor="@color/float_window_black" />

    <TextView
        android:id="@+id/float_window_account_service_textview_call_us"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/float_window_white"
        android:drawableRight="@drawable/float_window_jiantou"
        android:text="@string/float_window_call_us"
        android:textColor="@color/float_window_black" />

</LinearLayout>