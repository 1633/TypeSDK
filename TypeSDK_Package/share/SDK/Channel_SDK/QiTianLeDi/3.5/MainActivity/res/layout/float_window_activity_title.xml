<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ededed"
     >
<TextView 
    android:id="@+id/float_window_title_text_msg"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
     android:gravity="center"
     android:textSize="18sp"
     android:textColor="#000"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
     android:text="@string/float_window_gift"
    />
    <Button
        android:id="@+id/float_window_title_btn_backgame"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:background="@color/float_window_transparent"
        android:gravity="center"
        android:onClick="back$onclick"
        android:textColor="#000"
        android:textSize="14sp"
        android:text="@string/float_window_backgame" />

</RelativeLayout>