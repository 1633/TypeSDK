<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01000000">
    <!-- 验证码 -->
    <RelativeLayout 
    	android:id="@+id/lb_identifying_code_layout"
        android:layout_width="284.0dp"
        android:layout_height="140.0dp"
        android:background="@drawable/default_lb_float_exit"
        android:layout_centerInParent="true"
        android:paddingLeft="36.0dp"
        android:paddingRight="36.0dp"
        android:paddingTop="20.0dp"
        android:paddingBottom="31.0dp"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/lb_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <EditText 
	        	android:id="@+id/lb_code_et"
	         	android:layout_width="110.0dp"
	         	android:layout_height="35.0dp"
	         	android:hint="请输入验证码"
	         	android:textSize="14.0sp"
	         	android:textColorHint="#d5d3cf"
	         	android:textColor="#666666"
	         	android:gravity="center"
	         	android:singleLine="true"
	         	android:maxLength="4"
	         	android:inputType="number"
	         	android:background="@null"
	         	android:layout_alignParentLeft="true"/>
           	<TextView
           	    android:id="@+id/lb_code_line"
            	android:layout_width="110.0dp"
                android:layout_height="1.0dp"
                android:background="#bebeb9"
                android:layout_below="@id/lb_code_et"/>
           	<ImageView 
           	    android:id="@+id/lb_code_iv"
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:layout_toRightOf="@id/lb_code_et"
           	    android:layout_marginLeft="12.0dp"
           	    android:layout_alignBottom="@id/lb_code_et"/>
           	<ImageView 
           	    android:id="@+id/lb_refresh_iv"
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:scaleType="center"
           	    android:src="@drawable/default_lb_refresh"
           	    android:layout_alignParentRight="true"
           	    android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
        	android:id="@+id/lb_confrim_tv"
            android:layout_width="match_parent"
            android:layout_height="35.0dp"
            android:text="确认"
            android:textSize="15.0sp"
            android:gravity="center"
            android:textColor="#fff100"
            android:background="@drawable/default_lb_login_button_selector"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>