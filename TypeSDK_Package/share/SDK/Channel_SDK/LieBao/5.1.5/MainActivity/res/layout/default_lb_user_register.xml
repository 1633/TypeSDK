<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01000000">
    
    <!--注册 -->
    <RelativeLayout 
        android:id="@+id/lb_login_layout"
        android:layout_width="281.0dp"
        android:layout_height="299.0dp"
        android:background="@drawable/default_lb_login"
        android:layout_centerInParent="true"
        android:paddingLeft="19.0dp"
        android:paddingTop="22.0dp"
        android:paddingRight="19.0dp"
        android:paddingBottom="24.0dp"
        android:visibility="visible">
        <ImageView 
            android:id="@+id/lb_logo"
            android:layout_width="113.0dp"
            android:layout_height="45.0dp"
            android:background="@drawable/default_lb_logo_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4.0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <RelativeLayout 
            android:id="@+id/lb_account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lb_logo"
            android:layout_marginTop="19.0dp">
            <EditText 
                android:id="@+id/lb_account_random_et"
                android:layout_width="match_parent"
                android:layout_height="36.0dp"
                android:hint="请输入帐号"
                android:textSize="14.0sp"
                android:textColorHint="#bfbfbc"
                android:textColor="#666666"
                android:gravity="center"
                android:singleLine="true"
                android:ems="20"
                android:maxLength="20"
                android:selectAllOnFocus="true"
                android:background="@null"/>
            <TextView
                android:id="@+id/lb_account_line"
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#bebeb9"
                android:layout_below="@id/lb_account_random_et"/>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/lb_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lb_account_layout"
            android:layout_marginTop="7.0dp">
            <EditText 
                android:id="@+id/lb_password_random_et"
                android:layout_width="match_parent"
                android:layout_height="36.0dp"
                android:hint="请设置6~12位密码"
                android:textSize="14.0sp"
                android:textColor="#666666"
                android:textColorHint="#bfbfbc"
                android:gravity="center"
                android:ems="12"
                android:maxLength="12"
                android:singleLine="true"
				android:selectAllOnFocus="true"                
                android:inputType="textPassword"
                android:background="@null"/>
            
            <TextView
                android:id="@+id/lb_password_line"
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#bebeb9"
                android:layout_below="@id/lb_password_random_et"/>
            
            <LinearLayout 
                android:id="@+id/lb_switch_password_layout"
                android:layout_width="wrap_content"
                android:layout_height="33.0dp"
                android:layout_alignRight="@id/lb_password_random_et"
                android:layout_centerVertical="true"
                android:paddingRight="11.0dp"
                android:paddingLeft="11.0dp"
                android:focusable="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lb_switch_iv"
                	android:layout_width="19.0dp"
                	android:layout_height="19.0dp"
                	android:background="@drawable/default_lb_pw_selector"
                	android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/lb_register_tv"
            android:layout_width="90.0dp"
            android:layout_height="35.0dp"
            android:background="@drawable/default_lb_register_selector"
            android:layout_below="@id/lb_password_layout"
            android:layout_marginTop="31.0dp"
            android:textSize="15.0sp"
            android:text="一键注册"
            android:textColor="#3a3026"
            android:gravity="center"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/lb_commit_tv"
            android:layout_width="146.0dp"
            android:layout_height="35.0dp"
            android:background="@drawable/default_lb_login_button_selector"
            android:layout_below="@id/lb_password_layout"
            android:layout_marginTop="31.0dp"
            android:textSize="15.0sp"
            android:text="提 交"
            android:textColor="#fff200"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="20.0dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="5.0dp"
           	android:paddingRight="5.0dp">
            <LinearLayout 
                android:id="@+id/lb_go_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/default_lb_goback_button_selector"
                android:layout_centerVertical="true">
                <TextView 
		            android:layout_width="56.0dp"
		            android:layout_height="20.0dp"
		            android:text="返回"
		            android:textSize="11.0sp"
		            android:textColor="#626262"
		            android:gravity="center"/>
            </LinearLayout>
	        
	       <TextView
		        android:id="@+id/lb_agreement_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="注册即同意《51508服务条款》"
		        android:textSize="12.0sp"
		        android:gravity="center"
		        android:textColor="@drawable/default_lb_agreement_textcolor"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>