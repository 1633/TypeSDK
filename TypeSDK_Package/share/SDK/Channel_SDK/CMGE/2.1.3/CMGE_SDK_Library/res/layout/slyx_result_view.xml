<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

   

    <LinearLayout
        android:id="@+id/cmge_result_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:layout_marginRight="80.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center"
        android:orientation="vertical" >
        
        <TextView android:id="@+id/slyx_bindunbind_rst"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:textSize="18.0sp" />
        

              <TextView
                android:id="@+id/slyx_rst_line2_1"
                android:layout_marginTop="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffa0a0a0"
                android:gravity="left"
                android:textSize="16.0sp" />


        <LinearLayout
            android:id="@+id/slyx_rst_line3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/slyx_rst_line3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slyx_rst_enjoy_game"
                android:textColor="#ffa0a0a0"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/slyx_rst_line3_2"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/slyx_smile"
                android:contentDescription="@string/slyx_img_des" />
        </LinearLayout>

        <Button
            android:id="@+id/slyx_result_confirm_bt"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/slyx_login_bt_s"
            android:gravity="center"
            android:padding="0.0dip"
            android:text="@string/slyx_confirm"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />

        <LinearLayout
            android:id="@+id/slyx_rst_help"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0.0dip" >

            <TextView
                android:id="@+id/slyx_rst_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15.0dip"
                android:textColor="#ffa0a0a0"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/slyx_rst_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:textColor="#ffa0a0a0"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>