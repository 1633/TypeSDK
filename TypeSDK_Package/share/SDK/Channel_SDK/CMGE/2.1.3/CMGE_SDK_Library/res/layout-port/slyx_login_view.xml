<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/slyx_login_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dip"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="0dip"
        android:paddingLeft="25.0dip"
        android:paddingRight="25.0dip"
        android:paddingTop="0dip" >

        <RelativeLayout
            android:id="@+id/slyx_login_logo_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dip"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="0dip"
            android:paddingRight="0dip" >

            <ImageView
                android:id="@+id/slyx_login_logo_img"
                android:layout_width="119.5dip"
                android:layout_height="37dip"
                android:src="@drawable/slyx_logo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/slyx_login_ml"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/slyx_login_logo_ll"
            android:orientation="vertical"
            android:padding="0dp"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/slyx_account_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/slyx_login_user_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="38.0dip"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/slyx_login_account_info_shape"
                    android:orientation="horizontal"
                    android:padding="2.0dip" >

                    <ImageView
                        android:id="@+id/slyx_login_user_img"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:background="@drawable/slyx_user_icon_s"
                        android:contentDescription="@string/slyx_img_des" />

                    <RelativeLayout
                        android:id="@+id/slyx_login_down_container"
                        android:layout_width="40dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="0dp" >

                        <ImageView
                            android:id="@+id/slyx_login_down"
                            android:layout_width="18.0dip"
                            android:layout_height="12.0dip"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/slyx_arrow_sele"
                            android:clickable="true"
                            android:contentDescription="@string/slyx_img_des" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/slyx_login_username_et"
                        android:layout_width="fill_parent"
                        android:layout_height="38.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toLeftOf="@+id/slyx_login_down_container"
                        android:layout_toRightOf="@+id/slyx_login_user_img"
                        android:background="@android:color/transparent"
                        android:hint="@string/cmge_login_username_hint"
                        android:inputType="text"
                        android:padding="0.0dip"
                        android:textColor="#ffa0a0a0"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/slyx_login_pass_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="38.0dip"
                    android:layout_below="@id/slyx_login_user_layout"
                    android:layout_marginTop="12.0dip"
                    android:background="@drawable/slyx_login_account_info_shape"
                    android:orientation="horizontal"
                    android:padding="2.0dip" >

                    <ImageView
                        android:id="@+id/slyx_login_pass_img"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:background="@drawable/slyx_pass_icon_s"
                        android:contentDescription="@string/slyx_img_des" />

                    <ImageView
                        android:id="@+id/slyx_login_eye_img"
                        android:layout_width="30.0dip"
                        android:layout_height="20.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:background="@drawable/slyx_eye_off"
                        android:contentDescription="@string/slyx_img_des" />

                    <EditText
                        android:id="@+id/slyx_login_password_et"
                        android:layout_width="fill_parent"
                        android:layout_height="38.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toLeftOf="@+id/slyx_login_eye_img"
                        android:layout_toRightOf="@+id/slyx_login_pass_img"
                        android:background="@android:color/transparent"
                        android:hint="@string/cmge_login_pass_hint"
                        android:inputType="textPassword"
                        android:padding="0.0dip"
                        android:textColor="#ffa0a0a0"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/slyx_account_bt_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slyx_account_info_layout"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="0dp" >

                <RelativeLayout
                    android:id="@+id/slyx_account_bt_layout_v1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                </RelativeLayout>

                <Button
                    android:id="@+id/slyx_login_start_bt"
                    android:layout_width="fill_parent"
                    android:layout_height="38.0dip"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/slyx_login_bt_s"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="@string/cmge_login_start_submit"
                    android:textColor="#ffffffff"
                    android:textSize="16.0sp" />

                <Button
                    android:id="@+id/slyx_login_submit_bt"
                    android:layout_width="fill_parent"
                    android:layout_height="38.0dip"
                    android:layout_marginTop="12.0dip"
                    android:background="@drawable/slyx_login_bt_l"
                    android:gravity="center"
                    android:padding="0.0dip"
                    android:text="@string/cmge_login_submit"
                    android:textColor="#ffffffff"
                    android:textSize="16.0sp" />

                <Button
                    android:id="@+id/slyx_login_reg_bt"
                    android:layout_width="fill_parent"
                    android:layout_height="38.0dip"
                    android:layout_marginTop="12.0dip"
                    android:background="@drawable/slyx_login_bt_s"
                    android:gravity="center"
                    android:padding="0.0dip"
                    android:text="@string/cmge_login_register"
                    android:textColor="#ffffffff"
                    android:textSize="16.0sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/slyx_account_bt_layout_v2"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/slyx_login_reg_bt" >
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/slyx_login_passm_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slyx_account_bt_layout"
                android:layout_marginTop="12.0dip"
                android:orientation="horizontal"
                android:padding="0dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/slyx_modify_password_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="0.0dip"
                    android:gravity="center"
                    android:padding="2.0dip"
                    android:paddingLeft="0.0dip"
                    android:text="@string/cmge_login_modify_password"
                    android:textColor="#ffe59139"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/slyx_find_password_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:padding="2.0dip"
                    android:paddingRight="0.0dip"
                    android:text="@string/cmge_login_find_password"
                    android:textColor="#ffe59139"
                    android:textSize="12.0sp" />

                <LinearLayout
                    android:id="@+id/slyx_login_contactus_tv1_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0.0dip"
                    android:layout_toLeftOf="@+id/slyx_find_password_tv"
                    android:layout_toRightOf="@+id/slyx_modify_password_tv"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:visibility="gone" >

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dip"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="2dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center"
                        android:background="@drawable/slyx_vertical_line"
                        android:contentDescription="@string/slyx_img_des" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dip"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/slyx_login_contactus_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0.0dip"
                        android:gravity="center"
                        android:padding="0.0dip"
                        android:text="@string/cmge_login_contactus_tv1"
                        android:textColor="#ffe59139"
                        android:textSize="15.0sp" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dip"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="2dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center"
                        android:background="@drawable/slyx_vertical_line"
                        android:contentDescription="@string/slyx_img_des" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dip"
                        android:layout_weight="1" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/slyx_login_ml"
            android:padding="0dp" >

            <RelativeLayout
                android:id="@+id/slyx_login_divide_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp" >

                <!--
                     <ImageView
                    android:id="@+id/slyx_login_divide_left_line"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slyx_img_line"
                    android:contentDescription="@string/slyx_img_des" />
                -->

                <ImageView
                    android:id="@+id/slyx_login_divide_right_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/slyx_img_line"
                    android:contentDescription="@string/slyx_img_des" />

                <TextView
                    android:id="@+id/slyx_login_divide_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffff"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/cmge_login_or"
                    android:textColor="#ffbfbfbf"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/slyx_login_thirdparty_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slyx_login_divide_layout"
                android:layout_marginTop="12.0dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/slyx_login_thirdparty_layout_TL"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/slyx_login_thridparty_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:padding="2dp"
                        android:text="@string/cmge_login_thirdparty_des"
                        android:textColor="#ffbfbfbf"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/slyx_login_contactus_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="2dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="0.0dip"
                        android:gravity="center"
                        android:text="@string/cmge_login_hotgames"
                        android:textColor="#ffe59139"
                        android:textSize="12.0sp"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/slyx_login_thridparty_bt_l"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@id/slyx_login_thirdparty_layout_TL"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="0dp" >

                    <Button
                        android:id="@+id/slyx_qq_btn"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_centerVertical="true"
                        android:background="@drawable/slyx_img_qq"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/slyx_sina_btn"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20.0dip"
                        android:layout_toRightOf="@id/slyx_qq_btn"
                        android:background="@drawable/slyx_img_sina"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/slyx_login_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/slyx_login_thirdparty_layout"
                android:layout_marginTop="5.0dip"
                android:orientation="horizontal"
                android:padding="0dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/slyx_login_qq_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="0.0dip"
                    android:text="123"
                    android:textColor="#ffbfbfbf"
                    android:textSize="11.0sp" />

                <TextView
                    android:id="@+id/slyx_login_hotline_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/slyx_login_qq_tv"
                    android:layout_marginTop="7dp"
                    android:padding="0.0dip"
                    android:text="123"
                    android:textColor="#ffbfbfbf"
                    android:textSize="11.0sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>