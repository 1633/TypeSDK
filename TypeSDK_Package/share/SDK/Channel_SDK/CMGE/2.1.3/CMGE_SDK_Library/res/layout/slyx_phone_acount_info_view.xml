<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slyx_modify_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/slyx_slyx_modify_userifo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/slyx_modify_user_layout"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="2.0dip"
                android:background="@drawable/slyx_login_account_info_shape"
                android:orientation="horizontal"
                android:padding="2.0dip" >

                <ImageView
                    android:id="@+id/slyx_modify_user_img"
                    android:layout_width="18.0dip"
                    android:layout_height="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/slyx_user_icon_s"
                    android:contentDescription="@string/slyx_img_des" />

                <EditText
                    android:id="@+id/slyx_modify_username"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@+id/slyx_modify_user_img"
                    android:background="@null"
                    android:hint="@string/cmge_username"
                    android:inputType="text"
                    android:textColor="#ffa0a0a0"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/slyx_modify_pass1"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_below="@id/slyx_modify_user_layout"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/slyx_login_account_info_shape"
                android:orientation="horizontal"
                android:padding="2.0dip"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/slyx_modify_pass1_img"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/slyx_pass_icon_s"
                    android:contentDescription="@string/slyx_img_des" />

                <EditText
                    android:id="@+id/slyx_modify_old_password_et"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@+id/slyx_modify_pass1_img"
                    android:background="@null"
                    android:hint="@string/slyx_modify_password_opass"
                    android:inputType="textPassword"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/slyx_slyx_modify_vcode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/slyx_bind_phone_layout"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/slyx_login_account_info_shape"
                android:orientation="horizontal"
                android:padding="2.0dip" >

                <ImageView
                    android:id="@+id/slyx_bind_phone_img"
                    android:layout_width="15.0dip"
                    android:layout_height="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/slyx_phone_icon_s"
                    android:contentDescription="@string/slyx_img_des" />

                <Button
                    android:id="@+id/slyx_get_verfiy_code_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4.0dip"
                    android:background="@drawable/slyx_vcode_s"
                    android:gravity="center"
                    android:paddingBottom="0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingTop="0dip"
                    android:text="@string/slyx_vcode_submit_bt"
                    android:textColor="@drawable/slyx_vcode_color"
                    android:textSize="12.0sp" />

                <EditText
                    android:id="@+id/slyx_bind_phonenumber_et"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toLeftOf="@+id/slyx_get_verfiy_code_bt"
                    android:layout_toRightOf="@+id/slyx_bind_phone_img"
                    android:background="@null"
                    android:hint="@string/cmge_input_phone"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="phone"
                    android:textColor="#ffa0a0a0"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/slyx_user_account_info_vcode_layout"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_below="@id/slyx_bind_phone_layout"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/slyx_login_account_info_shape"
                android:orientation="horizontal"
                android:padding="2.0dip" >

                <ImageView
                    android:id="@+id/slyx_user_account_info_vcode_img"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/slyx_sms_vcode_sel"
                    android:contentDescription="@string/slyx_img_des" />

                <EditText
                    android:id="@+id/slyx_user_account_info_vcode_et"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@+id/slyx_user_account_info_vcode_img"
                    android:background="@null"
                    android:hint="@string/slyx_input_vcode"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text"
                    android:textColor="#ffa0a0a0"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/slyx_slyx_pass_new_confirm_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/slyx_modify_new_pass_layout"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/slyx_login_account_info_shape"
                android:orientation="horizontal"
                
                android:padding="2.0dip" >

                <ImageView
                    android:id="@+id/slyx_modify_pass2_img"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/slyx_pass_icon_s"
                    android:contentDescription="@string/slyx_img_des" />

                <ImageView
                    android:id="@+id/slyx_modify_eye_img"
                    android:layout_width="30.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:background="@drawable/slyx_eye_off"
                    android:contentDescription="@string/slyx_img_des" />

                <EditText
                    android:id="@+id/slyx_modify_new_password_et"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toLeftOf="@+id/slyx_modify_eye_img"
                    android:layout_toRightOf="@+id/slyx_modify_pass2_img"
                    android:background="@null"
                    android:hint="@string/slyx_modify_password_npass"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPassword"
                    android:textColor="#ffa0a0a0"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/slyx_modify_confirm_layout"
                android:layout_below="@id/slyx_modify_new_pass_layout"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/slyx_login_account_info_shape"
                android:orientation="horizontal"
                android:padding="2.0dip" >

                <ImageView
                    android:id="@+id/slyx_modify_pass3_img"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/slyx_pass_icon_s"
                    android:contentDescription="@string/slyx_img_des" />

                <EditText
                    android:id="@+id/slyx_modify_confirm_password_et"
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@+id/slyx_modify_pass3_img"
                    android:background="@null"
                    android:hint="@string/slyx_modify_password_cpass"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPassword"
                    android:textColor="#ffa0a0a0"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/cmge_modifty_btns"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/slyx_modify_submit_bt"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_marginBottom="0.0dip"
                android:layout_marginLeft="0.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/slyx_login_bt_l"
                android:gravity="center"
                android:padding="0.0dip"
                android:text="@string/slyx_modify_password_submit"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>