<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1c1e"
    android:orientation="vertical" >

 <!--    <include
        layout="@layout/slyx_logo_common_bar"
        android:visibility="gone" /> -->

    <include
        layout="@layout/slyx_title_common_bar"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/longin_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/slyx_dt_img_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_alignParentBottom="true">
        </RelativeLayout>

        <ScrollView
            android:id="@+id/slyx_login_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/slyx_dt_img_l"
            android:fillViewport="true"
            android:orientation="vertical" />
    </RelativeLayout>

</LinearLayout>