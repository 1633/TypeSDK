<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView android:id="@+id/slyx_pay_sms_info_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:layout_gravity="left"
            android:textSize="16sp" />
    
    <Button android:id="@+id/slyx_pay_sms_info_btn"
        	android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:textColor="@color/cmge_color_white"
            android:text="@string/slyx_confirm"
            android:background="@drawable/slyx_login_bt_s"
            android:textSize="16sp" />

</LinearLayout>
