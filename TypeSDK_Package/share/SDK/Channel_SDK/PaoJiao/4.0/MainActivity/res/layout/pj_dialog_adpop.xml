<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pj_corner_background_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pj_dialog_adpop_tips"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/pj_bg_title"
        >
        <TextView
            android:id="@+id/pj_dialog_adpop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_marginRight="50dp"
            android:textColor="#333333"
            android:singleLine="true"
            android:text="广告"
            />


        <ImageButton
            android:id="@+id/pj_dialog_adpop_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="24dp"
            android:background="@android:color/transparent"
            android:layout_gravity="end"
            android:src="@drawable/pj_icon_close"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <com.paojiao.sdk.widget.RatioImageView
        android:id="@+id/pj_dialog_adpop_banner"
        android:background="@drawable/pj_image_defaultbanner"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/pj_dialog_adpop_tips"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:ratio="2"
        android:scaleType="fitXY"
        android:layout_height="120dp"
        />

    <CheckBox
        android:id="@+id/pj_dialog_adpop_checkbox"
        android:layout_width="wrap_content"
        android:layout_below="@id/pj_dialog_adpop_banner"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:button="@drawable/pj_cbx_agreement"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@id/pj_dialog_adpop_banner"
        android:text="不再弹出"
        android:layout_toRightOf="@id/pj_dialog_adpop_checkbox"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:textColor="#696969"
        android:textSize="14sp"
        />
    <View
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_below="@id/pj_dialog_adpop_checkbox"
        android:layout_height="10dp"/>
</RelativeLayout>