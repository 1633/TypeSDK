<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/pj_corner_background_above">

    <RelativeLayout

        android:id="@+id/pj_ll_back"
        android:layout_width="45dp"
        android:layout_height="45dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/pj_iv_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/pj_image_title_back" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="18sp" />
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:id="@+id/pj_ll_back_game"
        android:layout_width="45dp"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/pj_btn_back_game"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pj_image_title_returngame" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#ffbe0115" />
</RelativeLayout>