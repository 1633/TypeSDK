<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="30dp"
    android:gravity="center"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_height="50dp">
    <ImageView
        android:id="@+id/pj_iv_icon"
        android:layout_width="24dp"
        android:layout_centerInParent="true"
        android:layout_height="24dp" />
        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/pj_tv_desc"
            android:layout_centerInParent="true"
            android:textSize="10sp"
            android:text="账户"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/pj_iv_redpoint"
            android:src="@drawable/pj_image_redpoint"
            android:layout_alignTop="@id/pj_iv_icon"
            android:layout_alignRight="@id/pj_iv_icon"
            android:layout_width="5dp"
            android:visibility="gone"
            android:layout_height="5dp" />
</RelativeLayout>