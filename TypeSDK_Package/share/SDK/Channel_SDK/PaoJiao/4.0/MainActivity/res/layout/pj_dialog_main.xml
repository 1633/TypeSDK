<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#f7f8f8"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/pj_main_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/pj_bg_title"
        >
        <ImageView
            android:id="@+id/pj_main_title_icon"
            android:layout_width="155dp"
            android:layout_height="30dp"
            android:foregroundGravity="left"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/pj_main_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"
            android:layout_marginRight="50dp"
            android:textColor="#333333"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            />


        <ImageButton
            android:id="@+id/pj_main_title_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="24dp"
            android:background="@android:color/transparent"
            android:layout_gravity="end"
            android:src="@drawable/pj_icon_close"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#dfdfdf"
            android:layout_marginBottom="0.2dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="1dp"/>
        <RadioGroup
            android:id="@+id/pj_main_title_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/pj_radiobutton_login"
            android:checked="false"
            android:id="@+id/pj_main_title_login"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/pj_radiobutton_regist"
            android:checked="false"
            android:id="@+id/pj_main_title_regist"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/pj_radiobutton_recommend"
            android:checked="false"
            android:id="@+id/pj_main_title_recommend"/>
    </RadioGroup>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/pj_main_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingTop="10sp"
        android:minHeight="280dp"
        android:visibility="visible"
        >
        <EditText
            android:id="@+id/pj_main_login_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:background="@drawable/pj_background_input"
            android:drawableLeft="@drawable/pj_icon_account"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="请输入用户名"
            android:paddingRight="50dp"
            android:imeOptions="actionGo"
            android:singleLine="true"
            android:textColor="@color/pj_input_text_color"
            android:textColorHint="#BBBBBB"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            />


        <ImageView
            android:id="@+id/pj_main_login_expand"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignTop="@id/pj_main_login_username"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingRight="8dp"
            android:layout_alignRight="@id/pj_main_login_username"
            android:src="@drawable/pj_expand_large_holo_light"
            />

        <EditText
            android:id="@+id/pj_main_login_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/pj_main_login_username"
            android:background="@drawable/pj_background_input"
            android:drawableLeft="@drawable/pj_icon_password"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:ems="10"
            android:hint="请输入登录密码"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/pj_input_text_color"
            android:textColorHint="#BBBBBB"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/pj_main_login_entry"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/pj_button_bg_red"
            android:text="登录"
            android:gravity="center"
            android:clickable="true"
            android:layout_below="@id/pj_main_login_password"
            android:layout_marginTop="15dp"
            android:textColor="@drawable/pj_button_text_red"
            android:textSize="16sp"
            />

        <CheckBox
            android:id="@+id/pj_main_login_remember"
            android:layout_width="wrap_content"
            android:layout_below="@id/pj_main_login_entry"
            android:checked="true"
            android:layout_marginTop="15dp"
            android:button="@drawable/pj_cbx_agreement"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pj_main_login_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pj_main_login_remember"
            android:background="@android:color/transparent"
            android:layout_below="@id/pj_main_login_entry"
            android:text="记住密码"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/pj_main_login_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_below="@id/pj_main_login_entry"
            android:text="忘记密码？"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:textColor="#007ef3"
            android:textSize="16sp"
            />

        <ListView
            android:id="@+id/pj_main_login_userlist"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:cacheColorHint="#00000000"
            android:divider="#c4c9cc"
            android:layout_below="@id/pj_main_login_username"
            android:dividerHeight="0.3dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/pj_main_login_third_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="#cccccc"
            android:visibility="gone"
            android:layout_below="@id/pj_main_login_forget"
            android:text="——  第三方账号登录  ——"/>
        <LinearLayout
            android:id="@+id/pj_main_login_third"
            android:layout_below="@id/pj_main_login_third_tips"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
        </LinearLayout>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pj_main_regist_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingTop="10sp"
            android:minHeight="280dp"
            android:visibility="gone"
            >
            <EditText
                android:id="@+id/pj_main_regist_username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:background="@drawable/pj_background_input"
                android:drawableLeft="@drawable/pj_icon_account"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="请输入用户名"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:textColor="@color/pj_input_text_color"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/pj_main_regist_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:layout_below="@id/pj_main_regist_username"
                android:background="@drawable/pj_background_input"
                android:drawableLeft="@drawable/pj_icon_password"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:ems="10"
                android:hint="请输入密码"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/pj_input_text_color"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/pj_main_regist_repassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:layout_below="@id/pj_main_regist_password"
                android:background="@drawable/pj_background_input"
                android:drawableLeft="@drawable/pj_icon_password"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:ems="10"
                android:hint="请确认密码"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/pj_input_text_color"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                />
                <CheckBox
                    android:id="@+id/pj_main_regist_agreement"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/pj_main_regist_repassword"
                    android:checked="true"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/pj_cbx_agreement"
                    android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/pj_main_regist_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_below="@id/pj_main_regist_repassword"
                android:text="我已阅读并接受"
                android:layout_toRightOf="@id/pj_main_regist_agreement"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:textColor="#696969"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/pj_main_regist_protect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_below="@id/pj_main_regist_repassword"
                android:text=">>用户服务协议"
                android:layout_toRightOf="@id/pj_main_regist_tips"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:textColor="#007ef3"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/pj_main_regist_tips"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/pj_main_regist_onekey"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/pj_button_bg_gray"
                    android:text="一键快速注册"
                    android:layout_below="@id/pj_main_login_password"
                    android:textColor="@drawable/pj_button_text_gray"
                    android:textSize="16sp"
                    />
                <Button
                    android:id="@+id/pj_main_regist_entry"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/pj_button_bg_red"
                    android:text="注册"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/pj_main_login_password"
                    android:textColor="@drawable/pj_button_text_red"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pj_main_motify_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingTop="10sp"
            android:minHeight="280dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/pj_main_motify_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pj_input_text_color"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:text="修改密码"/>

            <EditText
                android:id="@+id/pj_main_motify_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:layout_below="@id/pj_main_motify_tips"
                android:background="@drawable/pj_background_input"
                android:ems="10"
                android:hint="请输入密码"
                android:layout_marginTop="10dp"
                android:paddingRight="50dp"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:textColor="@color/pj_input_text_color"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/pj_main_motify_repassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:layout_below="@id/pj_main_motify_password"
                android:background="@drawable/pj_background_input"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:ems="10"
                android:hint="请确认密码"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/pj_input_text_color"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                />

            <Button
                android:id="@+id/pj_main_motify_entry"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/pj_button_bg_red"
                android:text="确认修改"
                android:layout_below="@id/pj_main_motify_repassword"
                android:layout_marginTop="15dp"
                android:textColor="@drawable/pj_button_text_red"
                android:textSize="16sp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pj_main_find_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingTop="10sp"
            android:minHeight="280dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/pj_main_find_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pj_input_text_color"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:text="找回密码"/>

            <LinearLayout
                android:id="@+id/a"
                android:layout_below="@id/pj_main_find_tips"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/pj_main_find_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/pj_background_input"
                    android:ems="10"
                    android:hint="请输入手机号"
                    android:paddingRight="50dp"
                    android:imeOptions="actionGo"
                    android:singleLine="true"
                    android:textColor="@color/pj_input_text_color"
                    android:textColorHint="#BBBBBB"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp"
                    />
                <Button
                    android:id="@+id/pj_main_find_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/pj_button_bg_gray"
                    android:text="获取验证码"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/pj_button_text_gray"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/b"
                android:layout_below="@id/a"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/pj_main_find_authcode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/pj_background_input"
                    android:ems="10"
                    android:hint="请输入验证码"
                    android:paddingRight="50dp"
                    android:imeOptions="actionGo"
                    android:singleLine="true"
                    android:textColor="@color/pj_input_text_color"
                    android:textColorHint="#BBBBBB"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp"
                    />
                <Button
                    android:id="@+id/pj_main_find_check"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/pj_button_bg_red"
                    android:text="验证手机号"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/pj_button_text_red"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pj_input_text_color"
                android:textSize="16sp"
                android:layout_below="@id/b"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:text="找回密码不成功？联系泡椒客服："/>
            <TextView
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pj_input_text_color"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:layout_below="@id/c"
                android:layout_centerHorizontal="true"
                android:text="QQ:8001466788"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pj_main_recommend_layout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="280dp">
            <WebView
                android:id="@+id/pj_main_recommend_webview"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ProgressBar
                android:id="@+id/pj_main_recommend_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center"
                />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>