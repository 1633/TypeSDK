<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal">
	<LinearLayout
			android:id = "@+id/umipay_announcement_title"
			android:layout_width = "match_parent"
			android:layout_height = "62dp"
			android:layout_alignParentTop = "true"
			android:layout_alignParentLeft = "true"
			android:paddingLeft="8dp"
			android:gravity = "left|center_vertical"
			android:background = "@drawable/umipay_announcement_background_stroke" >

		<ImageView
				android:layout_width = "30dp"
				android:layout_height = "40dp"
				android:layout_marginLeft = "12dp"
				android:clickable = "false"
				android:src = "@drawable/umipay_owan_logo" />


		<TextView
				android:id = "@+id/umipay_title_tv"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:clickable = "false"
				android:gravity = "center"
				android:layout_marginLeft = "4dp"
				android:text = "@string/umipay_announcement"
				android:textColor = "@color/strip"
				android:textSize = "18sp" />

	</LinearLayout >
	<ProgressBar
			android:id = "@+id/umipay_announcement_dialog_progressbar"
			style = "?android:attr/progressBarStyleHorizontal"
			android:layout_width = "match_parent"
			android:layout_height = "1dp"
			android:layout_gravity = "center_horizontal"
			android:layout_below="@+id/umipay_announcement_title"
			android:max="100"
			android:progress="0"
			android:indeterminate = "false" />

	<Button
			android:id = "@+id/umipay_confirm_btn"
			android:layout_width = "100dp"
			android:layout_height = "40dp"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:gravity="center"
			android:layout_marginTop = "10dp"
			android:layout_marginBottom = "14dp"
			android:background = "@drawable/umipay_btn_yellow"
			android:text = "@string/umipay_announcement_confirm"
			android:textColor = "@color/umipay_white"
			android:textSize = "12sp" />
</RelativeLayout >