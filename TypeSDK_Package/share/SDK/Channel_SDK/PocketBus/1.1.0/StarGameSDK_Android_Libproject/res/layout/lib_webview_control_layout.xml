<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
            android:id="@+id/lib_top_delete_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

        <ImageView
                android:id="@+id/lib_top_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/lib_top_delete_selector"
                android:duplicateParentState="true"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lib_control_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

        <LinearLayout
                android:id="@+id/lib_go_back_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical">

            <ImageView
                    android:id="@+id/lib_go_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lib_top_goback_selector"
                    android:duplicateParentState="true"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lib_go_forward_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp"
                android:gravity="right|center_vertical">

            <ImageView
                    android:id="@+id/lib_go_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lib_top_forward_selector"
                    android:duplicateParentState="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lib_refresh_layout"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

        <ImageView
                android:id="@+id/lib_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lib_button_refresh_selector"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lib_stop_layout"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

        <ImageView
                android:id="@+id/lib_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lib_button_stop_selector"/>
    </LinearLayout>
</merge>