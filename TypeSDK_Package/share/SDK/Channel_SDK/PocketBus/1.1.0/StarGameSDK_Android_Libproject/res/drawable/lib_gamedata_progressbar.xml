<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip"/>

            <gradient
                    android:angle="270"
                    android:endColor="@color/lib_black"
                    android:startColor="@color/lib_black"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip"/>

                <gradient
                        android:angle="270"
                        android:endColor="@color/lib_game_data_progress"
                        android:startColor="@color/lib_game_data_progress"/>
            </shape>
        </clip>
    </item>

</layer-list>