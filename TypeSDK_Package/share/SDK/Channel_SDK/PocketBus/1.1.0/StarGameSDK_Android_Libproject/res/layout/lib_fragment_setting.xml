<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/lib_background" >
    <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp" >
            <RelativeLayout
                    android:id="@+id/lib_rl_avatar"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/lib_setting_item_background"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/lib_avatar"
                        android:textColor="@color/lib_text_black"
                        android:textSize="15sp"/>
                <ImageView
                        android:id="@+id/lib_arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/lib_arrow_right"/>

                <ImageView
                        android:id="@+id/lib_setting_avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/lib_arrow_right"
                        android:scaleType="fitXY"
                        android:src="@drawable/lib_account_avatar"/>
            </RelativeLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/lib_divider_solid_line_background"/>
            <LinearLayout
                    android:id="@+id/lib_rl_email"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/lib_setting_item_background"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/lib_modify_email"
                        android:textSize="15sp"
                        android:textColor="@color/lib_text_black"/>
                <TextView
                        android:id="@+id/lib_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:textColor="@color/lib_text_grey"
                        />
            </LinearLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/lib_divider_solid_line_background"/>
            <RelativeLayout
                    android:id="@+id/lib_rl_name"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/lib_setting_item_background"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                <TextView
                        android:id="@+id/lib_nick_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/lib_modify_nickname"
                        android:textColor="@color/lib_text_black"
                        android:textSize="15sp"/>
                <ImageView
                        android:id="@+id/lib_nick_arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/lib_arrow_right"/>
                <TextView
                        android:id="@+id/lib_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/lib_nick_arrow_right"
                        android:layout_toRightOf="@id/lib_nick_textview"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/lib_text_red"
                        android:textSize="15sp"/>
            </RelativeLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/lib_divider_solid_line_background"/>
            <RelativeLayout
                    android:id="@+id/lib_rl_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/lib_setting_item_background"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                <TextView
                        android:id="@+id/lib_phone_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/lib_modify_phone"
                        android:textColor="#242424"
                        android:textSize="15sp"/>
                <ImageView
                        android:id="@+id/lib_phone_arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/lib_arrow_right"/>

                <TextView
                        android:id="@+id/lib_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/lib_phone_arrow_right"
                        android:layout_toRightOf="@id/lib_phone_textview"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/lib_text_red"
                        android:textSize="15sp"/>
            </RelativeLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/lib_divider_solid_line_background"/>
            <RelativeLayout
                    android:id="@+id/lib_rl_modifypwd"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/lib_setting_item_background"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                <TextView
                        android:id="@+id/lib_set_or_modify_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/lib_modify_password"
                        android:textColor="#242424"
                        android:textSize="15sp"/>
                <ImageView
                        android:id="@+id/lib_pwd_arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/lib_arrow_right"/>
            </RelativeLayout>
            <View
                    android:id="@+id/bottom_divider"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/lib_divider_solid_line_background"/>
            <Button
                    style="@style/LibButtonStyle"
                    android:id="@+id/lib_logout"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/lib_button_red_background"
                    android:text="@string/lib_logout" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
