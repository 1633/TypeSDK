<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:background="@drawable/person_button_white_normal"
            android:padding="0dp">

        <ImageView
                android:id="@+id/lib_game_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/lib_account_mygame"
                android:scaleType="fitXY"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lib_game_avatar"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
            <TextView
                    style="@style/LibTextStyle_PersonCenter"
                    android:id="@+id/lib_game_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    style="@style/LibSmallTextStyle_PersonCenter"
                    android:id="@+id/lib_game_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>