<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/picker_method_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal">

    <ImageView
            android:id="@+id/picker_method_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/lib_share_icon_sina">
    </ImageView>

    <TextView
            android:id="@+id/picker_method_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/lib_sina"
            android:textSize="15sp"
            android:textColor="@color/lib_hint_color">
    </TextView>

</LinearLayout>