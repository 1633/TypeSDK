<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@color/lib_background"
        android:layout_height="fill_parent">
    <ScrollView
            android:layout_marginLeft="15dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/lib_background"
            android:scrollbars="none">
        <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="17sp"
                    android:textColor="@color/lib_black_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lib_real_name_confirm_text_view"
                    />
            <TextView
                    android:textSize="17sp"
                    android:textColor="@color/lib_black_normal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lib_real_gender_confirm_text_view"
                    />
            <TextView
                    android:textSize="17sp"
                    android:textColor="@color/lib_black_normal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lib_ID_number_confirm_text_view"
                    />
            <Button
                    style="@style/LibButtonStyle"
                    android:id="@+id/lib_real_name_information_confirm_button"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/lib_button_red_background"
                    android:text="@string/lib_real_name_information_confirm"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>