<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#CC000000">

    <ImageView
            android:id="@+id/lib_big_bitmap"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"/>

    <FrameLayout
            android:id="@+id/url_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="invisible">
        <WebView
                android:id="@+id/lib_image_big"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#CC000000"/>
        <TextView
                android:id="@+id/save"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="50dp"
                android:textColor="@color/lib_white"
                android:textSize="17sp"
                android:text="@string/save"
                android:background="@drawable/lib_backgroud_save_photo_selector"/>
    </FrameLayout>

    <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            android:src="@drawable/lib_button_close_big_photo_selector"/>
    <TextView
            android:id="@+id/ensure"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"
            android:textColor="@color/lib_white"
            android:textSize="17sp"
            android:text="@string/lib_confirm"
            android:background="@drawable/lib_backgroud_save_photo_selector"/>

    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"/>
</FrameLayout>