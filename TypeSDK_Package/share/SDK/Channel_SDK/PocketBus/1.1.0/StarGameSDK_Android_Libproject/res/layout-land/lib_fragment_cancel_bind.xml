<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/lib_background"
            android:scrollbars="none">
    <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <ImageView android:layout_height="132dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="15dp"
                   android:background="@drawable/lib_mail_change_bind_land"
                   android:id="@+id/lib_cancle_bind_imageview"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="97dp"/>
        <View
                android:layout_marginTop="30dp"
                android:layout_width="1dp"
                android:layout_height="132dp"
                android:id="@+id/lib_cancle_bind_line_land"
                android:layout_marginLeft="142dp"
                android:background="@drawable/lib_change_bind_line_land"/>
        <LinearLayout
                android:layout_alignLeft="@id/lib_cancle_bind_line_land"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            <LinearLayout
                    android:id="@+id/bind_remind_info_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="visible">
                <TextView
                        android:visibility="gone"
                        android:id="@+id/bind_remind_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/lib_bind_success"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/lib_bind_success"
                        android:textColor="#d45c51"
                        android:textSize="18sp"
                        />
                <View
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/lib_item_dot_repeat_background"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                <TextView
                        android:id="@+id/lib_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/lib_bind_account"
                        android:visibility="gone"
                        android:textColor="#242424"
                        android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/lib_bind_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lib_bind_email_tips"
                    android:textColor="#242424"
                    android:textSize="17sp"/>
            <View
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/lib_item_dot_repeat_background"/>
            <TextView
                    android:layout_marginTop="28dp"
                    android:id="@+id/lib_bind_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/lib_bind_email"
                    android:textColor="@color/lib_text_red"
                    android:textSize="18sp"/>
            <Button
                    android:layout_marginTop="28dp"
                    android:id="@+id/lib_change_bind"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/lib_button_orange_background"
                    android:text="@string/lib_change_email"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>