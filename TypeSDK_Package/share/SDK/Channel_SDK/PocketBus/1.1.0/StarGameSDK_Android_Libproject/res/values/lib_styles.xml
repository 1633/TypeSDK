<resources>

    <style name="LibDialogActivityStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LibSamllButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="LibOtherLoginTextStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:textColor">#b0a28d</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="LibSelectAccountTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#242424</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LibLoadingDialogTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#242424</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LibDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="LibLoadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="LibLoadingDialogWithoutDim" parent="LibLoadingDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="LibEditTextBaseStyle">

        <!-- api 12 -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/lib_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/lib_black_hint</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="LibEditTextStyle" parent="LibEditTextBaseStyle">
        <item name="android:background">@drawable/lib_edit_text_background</item>
    </style>

    <style name="LibStandardEditTextStyle" parent="LibEditTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/lib_black_normal</item>
        <item name="android:textColorHint">@color/lib_black_hint</item>
    </style>

    <style name="LibButtonStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/lib_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LibForumInfoTextViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/lib_black_normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LibGameDataImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="LibGameDataProgressbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:progressDrawable">@drawable/lib_gamedata_progressbar</item>
    </style>

    <style name="LibTextStyle_PersonCenter">
        <item name="android:textColor">@color/lib_text_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LibTextStyle_PersonCenter_level" parent="LibTextStyle_PersonCenter">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="LibButtonStyle_PersonCenter" parent="LibTextStyle_PersonCenter">
        <item name="android:layout_height">40dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/lib_button_white_selector</item>
    </style>

    <style name="LibButtonStyle_PersonCenter_Port" parent="LibButtonStyle_PersonCenter">
        <item name="android:layout_width">105dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="LibButtonStyle_PersonCenter_Land" parent="LibButtonStyle_PersonCenter">
        <item name="android:layout_width">115dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="LibSmallTextStyle_PersonCenter">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LibTextTipsStyle_PersonCenter" parent="LibSmallTextStyle_PersonCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/lib_account_reddot</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="LibTextTipsStyle_RecentPlayGame" parent="LibSmallTextStyle_PersonCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/lib_account_reddot</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="LibTextTipsStyle_ForumInfo" parent="LibSmallTextStyle_PersonCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/lib_account_reddot</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="LibButtonStyle_FriendList">
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LibTextViewStyle_CustomPhotoSelectView">
        <item name="android:textColor">@color/lib_white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/lib_button_gray_selector</item>
    </style>

    <style name="LibProgressBar_Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/lib_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>
</resources>