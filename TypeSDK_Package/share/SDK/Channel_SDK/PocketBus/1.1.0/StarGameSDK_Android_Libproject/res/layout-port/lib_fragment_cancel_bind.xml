<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/lib_background"
            android:scrollbars="none">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
        <LinearLayout
                android:id="@+id/bind_remind_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="visible">
            <TextView
                    android:visibility="gone"
                    android:id="@+id/bind_remind_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/lib_bind_success"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/lib_bind_success"
                    android:textColor="#d45c51"
                    android:textSize="18sp"
                    />
            <View
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/lib_item_dot_repeat_background"/>
        </LinearLayout>
        <TextView
                android:visibility="gone"
                android:id="@+id/lib_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/lib_bind_account"
                android:textColor="#242424"
                android:textSize="15sp"/>
        <ImageView android:layout_height="110dp"
                   android:layout_marginTop="30dp"
                   android:background="@drawable/lib_mail_change_bind_port"
                   android:id="@+id/lib_cancle_bind_imageview"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="80dp">
        </ImageView>
        <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:id="@+id/lib_bind_tips"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/lib_bind_email_tips"
                android:textColor="#242424"
                android:paddingBottom="0dp"
                android:textSize="17sp"/>
        <TextView
                android:id="@+id/lib_bind_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="@string/lib_bind_email"
                android:textColor="@color/lib_text_red"
                android:textSize="18sp"/>
        <View
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/lib_item_dot_repeat_background"/>
        <Button
                style="@style/LibButtonStyle"
                android:id="@+id/lib_change_bind"
                android:layout_width="330dp"
                android:layout_marginTop="30dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                android:background="@drawable/lib_button_orange_background"
                android:text="@string/lib_change_email"/>
    </LinearLayout>
</ScrollView>