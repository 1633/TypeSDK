<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/lvansdk_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/descLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/desctitle"
            style="@style/text_20_ff7f16"
            android:layout_width="0dp"
            android:layout_height="30dip"
            android:layout_marginBottom="8dp"
            android:layout_weight="15"
            android:gravity="center"
            android:text="ceshi " />

        <ImageButton
            android:id="@+id/dialog_pre_entry_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/lvansdk_search_clear_normal" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/normalLinear"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:padding="0dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            style="@style/text_20_ff7f16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ceshi "
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/normal_margin_8"
            android:background="@android:color/transparent"
            android:src="@drawable/lvansdk_close_btn"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#00c0ed" >
        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialogLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="@dimen/normal_margin_8"
        android:visibility="visible" >

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="100.0dip"
            android:layout_height="25dip"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/lvan_ensure"
            android:textColor="#333333" />

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="100.0dip"
            android:layout_height="25dip"
            android:layout_marginLeft="100.0dip"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/lvan_cancel"
            android:textColor="#00c0ed" />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text=""
        android:visibility="gone" />

</LinearLayout>