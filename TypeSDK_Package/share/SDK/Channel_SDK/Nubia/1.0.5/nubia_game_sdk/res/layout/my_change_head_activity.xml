<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_colors_gray_bg" >

    <RelativeLayout
        android:id="@+id/my_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_actionbar_heght"
        android:background="@color/my_colors_white"
        android:orientation="horizontal" >

        <View
            android:id="@+id/my_rl_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/my_ib_back"
            android:layout_width="38.66dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/my_selector_arrow_l" />

        <CheckBox
            android:id="@+id/my_btn_album_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:button="@null"
            android:drawableRight="@drawable/my_check_album_more"
            android:gravity="center_vertical"
            android:text="无图片"
            android:textColor="@color/my_colors_actionbar_title"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_rl_bottom"
        android:layout_margin="@dimen/my_activity_padding"
        android:background="@drawable/my_round_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp" >

        <GridView
            android:id="@+id/id_gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:clipChildren="true"
            android:gravity="center"
            android:horizontalSpacing="1dip"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dip" >
        </GridView>
    </LinearLayout>

</RelativeLayout>